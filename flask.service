[Unit]
Description=Meter Parking App
After=network.target

[Service]
User=Ubuntu
Group=Ubuntu
Environment="LANG=en_US.UTF-8"
Environment="LANGUAGE=en_US.UTF-8:"
WorkingDirectory=/home/ubuntu/Parking-App
ExacStart=/bin/bash -c "source secrets.sh" && source env/bin/activate && python3 server.py &>> flask.log"
Restart=always

[Install]
WantedBy=multi-user.target